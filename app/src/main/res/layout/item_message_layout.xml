<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingStart="15dp"
    android:paddingLeft="15dp"
    android:paddingEnd="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sender_bubble"
        android:elevation="2dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="18sp"
        tools:text="Placeholder message" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_body"
        android:layout_alignEnd="@id/message_body"
        android:layout_alignRight="@id/message_body"
        android:layout_marginTop="5dp"
        android:text="10:45PM"
        android:textColor="@color/primaryColor"
        android:textSize="12sp" />
</RelativeLayout>